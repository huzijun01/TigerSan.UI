<ResourceDictionary xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:windows="clr-namespace:TigerSan.UI.Windows">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Styles/Global.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- 自定义窗口边框： -->
    <WindowChrome
            x:Key="CustomWindowChrome"
            CornerRadius="10"
            CaptionHeight="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="10"
            UseAeroCaptionButtons="False"/>

    <!-- 不可修改尺寸窗口边框： -->
    <WindowChrome
            x:Key="NoResizeWindowChrome"
            CornerRadius="10"
            CaptionHeight="0"
            GlassFrameThickness="0"
            ResizeBorderThickness="0"
            UseAeroCaptionButtons="False"/>

    <!-- 自定义窗口： -->
    <Style x:Key="CustomWindowStyle" TargetType="{x:Type windows:CustomWindow}">
        <Style.Setters>
            <Setter Property="MinWidth" Value="200" />
            <Setter Property="MinHeight" Value="100" />
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="{DynamicResource Global.FontFamily}" />
            <Setter Property="FontSize" Value="{DynamicResource Global.Content.FontSize}" />
            <Setter Property="Foreground" Value="{DynamicResource Colors.BasicWhite}" />
            <Setter Property="Background" Value="{DynamicResource Colors.PageBackground}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type windows:CustomWindow}">
                        <Grid ClipToBounds="True" Background="{TemplateBinding Background}">
                            <!-- 内容： -->
                            <Border
                                Padding="{TemplateBinding BorderPadding}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <windows:CustomToolBar Grid.Row="0"/>
                                    <ContentPresenter Grid.Row="1" ClipToBounds="True"/>
                                </Grid>
                            </Border>
                            <!-- 边框： -->
                            <Border
                                CornerRadius="5"
                                BorderBrush="{TemplateBinding ToolBarBackground}"
                                BorderThickness="{TemplateBinding BorderThickness}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style.Setters>
    </Style>
</ResourceDictionary>