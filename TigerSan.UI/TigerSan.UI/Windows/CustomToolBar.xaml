<UserControl x:Class="TigerSan.UI.Windows.CustomToolBar"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:TigerSan.UI.Windows"
             xmlns:controls="clr-namespace:TigerSan.UI.Controls"
             xmlns:windows="clr-namespace:TigerSan.UI.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="50"
             d:DesignWidth="500">

    <UserControl.Resources>
        <ResourceDictionary Source="../Styles/Global.xaml"/>
    </UserControl.Resources>

    <Grid
        x:Name="ToolBar"
        Grid.Row="0"
        Height="28"
        VerticalAlignment="Top"
        Background="{Binding ToolBarBackground}"
        DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type windows:CustomWindow}}}">

        <i:Interaction.Triggers>
            <i:EventTrigger EventName="MouseLeftButtonDown">
                <i:InvokeCommandAction Command="{Binding ToolBar_MouseLeftButtonDownCommand}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>

        <!--  左侧：  -->
        <StackPanel
            Margin="5,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Stretch"
            Orientation="Horizontal">
            <Image
                x:Name="icon"
                Width="16"
                Height="16"
                VerticalAlignment="Center"
                Source="{Binding Icon}" />
            <TextBlock
                x:Name="title"
                FontSize="12"
                Margin="5,0,0,0"
                VerticalAlignment="Center"
                Text="{Binding Title}"
                Foreground="{Binding ToolBarForeground}" />
        </StackPanel>

        <!--  右侧：  -->
        <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Orientation="Horizontal">
            <controls:ToolBarButton
                x:Name="btnMin"
                Text="&#xe70d;"
                Command="{Binding MinimizeCommand}"
                Foreground="{Binding ToolBarForeground}"
                Visibility="{Binding BtnMinVisibility}"/>
            <controls:ToolBarButton
                x:Name="btnMax"
                Text="&#xe62c;"
                Command="{Binding MaximizeCommand}"
                Foreground="{Binding ToolBarForeground}"
                Visibility="{Binding BtnMaxVisibility}"/>
            <controls:ToolBarButton
                x:Name="btnClose"
                Text="&#xe649;"
                Command="{Binding CloseCommand}"
                Foreground="{Binding ToolBarForeground}"
                MouseOverBackgroundOpacity="1"
                MouseOverBackground="Red"/>
        </StackPanel>
    </Grid>
</UserControl>
