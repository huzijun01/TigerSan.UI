<windows:CustomWindow
    x:Class="TigerSan.UI.Windows.UpdateWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:TigerSan.UI.Windows"
    xmlns:vm="clr-namespace:TigerSan.UI.ViewModels"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:windows="clr-namespace:TigerSan.UI.Windows"
    Style="{StaticResource PopWindowStyle}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    Title="{Binding Title}"
    Width="550"
    Height="320">

    <Window.Resources>
        <vm:DesignUpdateViewModel x:Key="DesignData" />
    </Window.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Closed">
            <prism:InvokeCommandAction Command="{Binding Window_ClosedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <!--  图片：  -->
            <Image Grid.Column="0" Source="{Binding Image}" />

            <!--  内容：  -->
            <StackPanel
                Grid.Column="2"
                HorizontalAlignment="Stretch">
                <!--  标题：  -->
                <TextBlock
                    Text="有新的版本！"
                    Margin="0,0,0,10"
                    Style="{StaticResource TitleTextBlockStyle}" />

                <!--  版本：  -->
                <TextBlock
                    Text="版本："
                    Style="{StaticResource PropNameTextBlockStyle}" />
                <TextBlock
                    Text="{Binding Version}"
                    d:DataContext="{StaticResource DesignData}"
                    Style="{StaticResource PropValueTextBlockStyle}" />

                <!--  主页链接：  -->
                <TextBlock
                    Text="主页链接："
                    Style="{StaticResource PropNameTextBlockStyle}" />
                <TextBlock
                    d:DataContext="{StaticResource DesignData}"
                    Style="{StaticResource UrlTextBlockStyle}"
                    Text="{Binding HomePageUrl}" >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDown">
                            <prism:InvokeCommandAction Command="{Binding tbkHomePageUrl_MouseDownCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBlock>

                <!--  下载链接：  -->
                <TextBlock
                    Text="下载链接："
                    Style="{StaticResource PropNameTextBlockStyle}" />
                <TextBlock
                    x:Name="tbkDownloadUrl"
                    Text="{Binding DownloadUrl}"
                    d:DataContext="{StaticResource DesignData}"
                    Style="{StaticResource UrlTextBlockStyle}" >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDown">
                            <prism:InvokeCommandAction Command="{Binding tbkDownloadUrl_MouseDownCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBlock>

                <!--  更新信息：  -->
                <TextBlock
                    Text="更新信息："
                    Style="{StaticResource PropNameTextBlockStyle}" />
                <ScrollViewer Height="80">
                    <TextBlock VerticalAlignment="Top"
                        Text="{Binding UpdateMessage}"
                        d:DataContext="{StaticResource DesignData}"
                        Style="{StaticResource PropValueTextBlockStyle}" />
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </Grid>
</windows:CustomWindow>
