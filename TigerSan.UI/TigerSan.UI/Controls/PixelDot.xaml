<UserControl x:Class="TigerSan.UI.Controls.PixelDot"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:TigerSan.UI.Controls"
             mc:Ignorable="d"
             d:DesignWidth="30" 
             d:DesignHeight="30">

    <UserControl.Resources>
        <ResourceDictionary>
            <local:PixelDotDesignData x:Key="PixelDotDesignData"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Border
        Width="{Binding Width}"
        Height="{Binding Height}"
        Background="{Binding Background}"
        BorderBrush="{Binding BorderBrush}"
        BorderThickness="{Binding BorderThickness}"
        CornerRadius="{Binding CornerRadius}"
        d:DataContext="{StaticResource PixelDotDesignData}"
        DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}" >
    </Border>
</UserControl>
