<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:TigerSan.UI.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/TigerSan.UI;component/Styles/Global.xaml"/>
        <ResourceDictionary Source="/TigerSan.UI;component/Styles/TransparentUserControlStyle.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!--  像素点：  -->
    <Style TargetType="{x:Type controls:PixelDot}" BasedOn="{StaticResource TransparentUserControlStyle}">
        <Setter Property="Width" Value="30"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Margin" Value="0,0,5,0"/>
        <Setter Property="CornerRadius" Value="3"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="SelectedBackground" Value="{StaticResource PixelDot_Selected_Background}"/>
        <Setter Property="SelectedBorderBrush" Value="{StaticResource PixelDot_Selected_BorderBrush}"/>
    </Style>
</ResourceDictionary>