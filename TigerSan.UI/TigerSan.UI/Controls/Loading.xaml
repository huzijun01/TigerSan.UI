<UserControl x:Class="TigerSan.UI.Controls.Loading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TigerSan.UI.Controls"
             mc:Ignorable="d" 
             d:DesignWidth="300"
             d:DesignHeight="300">
    <Grid
        x:Name="main_panel"
        DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Grid.Resources>
            <!--  容器：  -->
            <Style x:Key="PanelGridStyle" TargetType="{x:Type Grid}">
                <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
                <Setter Property="Width" Value="100" />
                <Setter Property="Height" Value="100" />
                <Setter Property="Margin" Value="0,0,0,0" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Top" />
            </Style>
            <!--  点：  -->
            <Style x:Key="PointBorderStyle" TargetType="{x:Type Border}">
                <Setter Property="Width" Value="12" />
                <Setter Property="Height" Value="12" />
                <Setter Property="CornerRadius" Value="6" />
                <Setter Property="Background" Value="#0077d7" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Top" />
            </Style>
        </Grid.Resources>

        <!--  3个圆点：  -->
        <Grid x:Name="panel1" Style="{StaticResource PanelGridStyle}">
            <Grid.RenderTransform>
                <RotateTransform Angle="{Binding Angle01}" />
            </Grid.RenderTransform>
            <Border x:Name="point1" Style="{StaticResource PointBorderStyle}" />
        </Grid>
        <Grid x:Name="panel2" Style="{StaticResource PanelGridStyle}">
            <Grid.RenderTransform>
                <RotateTransform Angle="{Binding Angle02}" />
            </Grid.RenderTransform>
            <Border x:Name="point2" Style="{StaticResource PointBorderStyle}" />
        </Grid>
        <Grid x:Name="panel3" Style="{StaticResource PanelGridStyle}">
            <Grid.RenderTransform>
                <RotateTransform Angle="{Binding Angle03}" />
            </Grid.RenderTransform>
            <Border x:Name="point3" Style="{StaticResource PointBorderStyle}" />
        </Grid>
        <Grid x:Name="panel4" Style="{StaticResource PanelGridStyle}">
            <Grid.RenderTransform>
                <RotateTransform Angle="{Binding Angle04}" />
            </Grid.RenderTransform>
            <Border x:Name="point4" Style="{StaticResource PointBorderStyle}" />
        </Grid>
        <Grid x:Name="panel5" Style="{StaticResource PanelGridStyle}">
            <Grid.RenderTransform>
                <RotateTransform Angle="{Binding Angle05}" />
            </Grid.RenderTransform>
            <Border x:Name="point5" Style="{StaticResource PointBorderStyle}" />
        </Grid>
    </Grid>
</UserControl>
