<UserControl x:Class="TigerSan.UI.Controls.TableItem"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:TigerSan.UI.Controls"
             mc:Ignorable="d" 
             d:DesignWidth="150"
             d:DesignHeight="50">

    <UserControl.Resources>
        <ResourceDictionary Source="TableGridStyle.xaml" />
    </UserControl.Resources>

    <Grid
        d:DataContext="{StaticResource TableItemDesignData}"
        DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}">
        <!-- 背景： -->
        <Border
            x:Name="background"
            Background="{Binding Background}"
            Opacity="{DynamicResource ItemBackground.Opacity}"/>

        <!-- 遮罩： -->
        <Border
            x:Name="mask"
            Background="{Binding MaskBackground}"
            Opacity="{DynamicResource ItemMask.Opacity}"/>

        <!-- 文本框： -->
        <TextBox
            x:Name="content"
            Padding="8"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            Height="{Binding Height}"
            MaxHeight="{Binding MaxHeight}"
            MinHeight="{Binding MinHeight}"
            IsReadOnly="{Binding IsReadOnly}"
            AcceptsReturn="{Binding AcceptsReturn}"
            TextAlignment="{Binding TextAlignment}"
            Style="{StaticResource EllipsisTextBoxStyle}"/>
    </Grid>
</UserControl>
