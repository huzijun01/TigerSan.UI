<UserControl x:Class="TigerSan.UI.Controls.TableItem"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:TigerSan.UI.Controls"
             mc:Ignorable="d" 
             d:DesignWidth="150"
             d:DesignHeight="50"
             Background="Transparent">
    <UserControl.Resources>
        <ResourceDictionary Source="TableGridStyle.xaml" />
    </UserControl.Resources>

    <Grid
        DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}"
        d:DataContext="{StaticResource TableItemDesignData}">

        <!-- 背景： -->
        <Border
            x:Name="background"
            Opacity="{DynamicResource ItemBackground.Opacity}"
            Background="{Binding Background}"/>

        <!-- 遮罩： -->
        <Border
            x:Name="mask"
            Opacity="{DynamicResource ItemMask.Opacity}"
            Background="{Binding MaskBackground}"/>

        <!-- 内容： -->
        <TextBox
            x:Name="content"
            LostFocus="content_LostFocus"
            Text="{Binding Text}"
            IsReadOnly="{Binding IsReadOnly}"
            TextAlignment="{Binding TextAlignment}"
            Style="{StaticResource ItemTextBoxStyle}"/>
    </Grid>
</UserControl>
