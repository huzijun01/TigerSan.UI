<UserControl x:Class="TigerSan.UI.Controls.TableGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TigerSan.UI.Controls"
             xmlns:behaviors="clr-namespace:TigerSan.UI.Behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <local:TableGridDesignData x:Key="TableGridDesignData"/>
    </UserControl.Resources>

    <!--  【水平滚动视图】：  -->
    <ScrollViewer
        x:Name="PART_HorizontalScrollViewer"
        HorizontalScrollBarVisibility="Auto"
        VerticalScrollBarVisibility="Disabled"
        d:DataContext="{StaticResource TableGridDesignData}"
        DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--  【浮动网格】：  -->
            <Grid x:Name="FloatGrid" VerticalAlignment="Top" HorizontalAlignment="Left"
                  behaviors:DynamicGridBehavior.ColCount="{Binding TableModel.ColCount}">
            </Grid>

            <!--  【剪裁网格】：  -->
            <Grid
                x:Name="PART_CutGrid"
                Grid.Row="1"
                ClipToBounds="True">
                <!--  【垂直滚动视图】：  -->
                <ScrollViewer
                    x:Name="PART_VerticalScrollViewer"
                    Margin="0,-38,0,0"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto">
                    <!--  【项目网格】：  -->
                    <Grid x:Name="ItemGrid" VerticalAlignment="Top" HorizontalAlignment="Left"
                          behaviors:DynamicGridBehavior.RowCount="{Binding TableModel.RowCount}"
                          behaviors:DynamicGridBehavior.ColCount="{Binding TableModel.ColCount}">
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
