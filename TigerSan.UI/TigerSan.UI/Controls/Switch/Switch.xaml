<UserControl x:Class="TigerSan.UI.Controls.Switch"
             xmlns:local="clr-namespace:TigerSan.UI.Controls"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="d" 
             Width="68"
             Height="30"
             FontSize="16"
             d:DesignWidth="68"
             d:DesignHeight="30"
             Foreground="{DynamicResource Colors.BasicWhite}">

    <UserControl.Resources>
        <local:SwitchDesignData x:Key="SwitchDesignData"/>
        <Thickness x:Key="Text.Margin">8,0</Thickness>
        <Thickness x:Key="Circle.Margin">3,0</Thickness>
        <system:Double x:Key="Circle.Size">24</system:Double>
        <CornerRadius x:Key="Circle.CornerRadius">12</CornerRadius>
    </UserControl.Resources>

    <Grid
        Width="{Binding Width}"
        Height="{Binding Height}"
        d:DataContext="{StaticResource SwitchDesignData}"
        DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}">

        <!-- 背景： -->
        <Border
            x:Name="background"
            CornerRadius="15"
            Background="{Binding UsingSwitchBackground}"/>

        <!-- 圆形网格： -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding CircleGridLeftColumnWidth}"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="{Binding CircleGridRightColumnWidth}"/>
            </Grid.ColumnDefinitions>

            <!-- 圆形： -->
            <Border
                x:Name="circle"
                Grid.Column="1"
                Width="{StaticResource Circle.Size}"
                Height="{StaticResource Circle.Size}"
                Margin="{StaticResource Circle.Margin}"
                CornerRadius="{StaticResource Circle.CornerRadius}"
                Background="{DynamicResource Colors.BasicWhite}"/>
        </Grid>

        <!-- 文本网格： -->
        <Grid Margin="{StaticResource Text.Margin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding CircleGridRightColumnWidth}"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="{Binding CircleGridLeftColumnWidth}"/>
            </Grid.ColumnDefinitions>

            <!-- 文本： -->
            <Label
                x:Name="text"
                Grid.Column="1"
                Padding="0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                Content="{Binding Text}"
                FontSize="{Binding FontSize}"
                Foreground="{Binding Foreground}"
                MinWidth="{StaticResource Circle.Size}"
                MaxHeight="{StaticResource Circle.Size}"
                d:DataContext="{StaticResource SwitchDesignData}"/>
        </Grid>
    </Grid>
</UserControl>
