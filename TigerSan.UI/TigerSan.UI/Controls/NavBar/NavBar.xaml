<UserControl x:Class="TigerSan.UI.Controls.NavBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TigerSan.UI.Controls"
             mc:Ignorable="d" 
             d:DesignWidth="200"
             d:DesignHeight="500">

    <UserControl.Resources>
        <ResourceDictionary Source="/TigerSan.UI;component/Controls/NavBar/NavBarStyle.xaml"/>
    </UserControl.Resources>

    <Grid
        d:DataContext="{StaticResource NavBarDesignData}"
        DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Logo: -->
        <Border
            x:Name="logo"
            Padding="0,5"
            Visibility="{Binding LogoVisibility}">
            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- 图片: -->
                <Image
                    Source="{Binding Logo}"
                    Style="{StaticResource NavLogoImageStyle}"/>

                <!-- 文本: -->
                <Label
                    Grid.Column="1"
                    Content="{Binding Title}"
                    Style="{StaticResource NavLogoLabelStyle}"/>

                <!-- 遮罩: -->
                <Border
                    x:Name="mask"
                    Grid.ColumnSpan="2"
                    Background="Transparent"/>
            </Grid>
        </Border>

        <!-- 临时菜单: -->
        <ScrollViewer Grid.Row="1" Opacity="0">
            <StackPanel>
                <!-- 文件夹: -->
                <local:NavFolder x:Name="tempFolder"/>

                <!-- 按钮: -->
                <local:NavButton x:Name="tempButton"/>
            </StackPanel>
        </ScrollViewer>

        <!-- 菜单: -->
        <ScrollViewer Grid.Row="1">
            <StackPanel>
                <!-- 文件夹: -->
                <ItemsControl
                    x:Name="folders"
                    Margin="5,0"
                    ItemsSource="{Binding NavBarModel.FolderModel.FolderModels}"
                    ItemTemplate="{StaticResource NavFolderTemplate}"/>

                <!-- 按钮: -->
                <ItemsControl
                    x:Name="buttons"
                    Margin="5,0"
                    ItemsSource="{Binding NavBarModel.FolderModel.ButtonModels}"
                    ItemTemplate="{StaticResource NavButtonTemplate}"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
