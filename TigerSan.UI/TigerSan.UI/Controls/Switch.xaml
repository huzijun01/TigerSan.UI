<UserControl x:Class="TigerSan.UI.Controls.Switch"
             xmlns:local="clr-namespace:TigerSan.UI.Controls"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="d" 
             Width="42"
             Height="20"
             FontSize="10"
             d:DesignWidth="45"
             d:DesignHeight="20"
             Foreground="{DynamicResource Colors.BasicWhite}">

    <UserControl.Resources>
        <local:SwitchDesignData x:Key="SwitchDesignData"/>
        <Thickness x:Key="TextMargin">2,0</Thickness>
        <Thickness x:Key="CircleMargin">2,0</Thickness>
        <system:Double x:Key="CircleSize">16</system:Double>
    </UserControl.Resources>

    <Grid
        Width="{Binding Width}"
        Height="{Binding Height}"
        d:DataContext="{StaticResource SwitchDesignData}"
        DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}">

        <!-- 背景： -->
        <Border
            x:Name="background"
            CornerRadius="10"
            Background="{Binding UsingSwitchBackground}"/>

        <!-- 圆形网格： -->
        <Grid Margin="{StaticResource CircleMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding CircleGridLeftColumnWidth}"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="{Binding CircleGridRightColumnWidth}"/>
            </Grid.ColumnDefinitions>
            <!-- 圆形： -->
            <Border
                x:Name="circle"
                Grid.Column="1"
                CornerRadius="8"
                Width="{StaticResource CircleSize}"
                Height="{StaticResource CircleSize}"
                Background="{DynamicResource Colors.BasicWhite}"/>
        </Grid>

        <!-- 文本网格： -->
        <Grid Margin="{StaticResource TextMargin}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding CircleGridRightColumnWidth}"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="{Binding CircleGridLeftColumnWidth}"/>
            </Grid.ColumnDefinitions>
            <!-- 文本： -->
            <Label
                x:Name="text"
                Grid.Column="1"
                Padding="0"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Center"
                Content="{Binding Text}"
                FontSize="{Binding FontSize}"
                Foreground="{Binding Foreground}"
                MinWidth="{StaticResource CircleSize}"
                MaxHeight="{StaticResource CircleSize}"
                d:DataContext="{StaticResource SwitchDesignData}"/>
        </Grid>
    </Grid>
</UserControl>
