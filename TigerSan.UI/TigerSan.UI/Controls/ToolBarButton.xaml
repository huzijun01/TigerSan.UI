<UserControl x:Class="TigerSan.UI.Controls.ToolBarButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TigerSan.UI.Controls"
             mc:Ignorable="d" 
             d:DesignWidth="50"
             d:DesignHeight="30"
             Width="45"
             FontSize="12"
             Foreground="White">

    <UserControl.Resources>
        <local:ToolBarButtonDesignData x:Key="ToolBarButtonDesignData"/>
    </UserControl.Resources>

    <Grid
        x:Name="panel"
        Cursor="Hand"
        Width="{Binding Path=Width}"
        Height="{Binding Path=Height}"
        d:DataContext="{StaticResource ToolBarButtonDesignData}"
        DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Border
            x:Name="background"
            Background="{Binding Path=MouseOverBackground}"
            BorderBrush="{Binding Path=BorderBrush}"
            BorderThickness="{Binding Path=BorderThickness}"
            Opacity="{Binding Path=UsingBackgroundOpacity}"
            Cursor="Hand"/>
        <TextBlock
            x:Name="content"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding Path=Text}"
            Margin="{Binding Path=Padding}"
            Foreground="{Binding Path=Foreground}"
            FontSize="{Binding Path=FontSize}"
            FontFamily="{DynamicResource Iconfont}"
            Cursor="Hand"/>
    </Grid>
</UserControl>
