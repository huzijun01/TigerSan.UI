<UserControl x:Class="TigerSan.UI.Controls.PageBar"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:TigerSan.UI.Controls"
             mc:Ignorable="d" 
             d:DesignWidth="400"
             d:DesignHeight="50">
    <UserControl.Resources>
        <local:PageBarDesignData x:Key="PageBarDesignData"/>
    </UserControl.Resources>

    <ScrollViewer
        VerticalAlignment="Bottom"
        HorizontalScrollBarVisibility="Auto"
        d:DataContext="{StaticResource PageBarDesignData}"
        DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}">
        <!-- 集合控件: -->
        <ItemsControl ItemsSource="{Binding NavBarModel.OpenedButtonModels}">
            <!-- 画布模板: -->
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <!-- 项目模板: -->
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:PageButton
                        ButtonModel="{Binding}"
                        Icon="{Binding Icon}"
                        Title="{Binding Title}"
                        IsSelected="{Binding IsSelected}"
                        NavBarModel="{Binding NavBarModel}"
                        Command="{Binding Command}"
                        CheckedCommand="{Binding CheckedCommand}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
