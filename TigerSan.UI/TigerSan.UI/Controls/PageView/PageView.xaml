<UserControl x:Class="TigerSan.UI.Controls.PageView"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:TigerSan.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <UserControl.Resources>
        <local:PageViewDesignData x:Key="PageViewDesignData"/>
    </UserControl.Resources>

    <Grid
        x:Name="panel"
        d:DataContext="{StaticResource PageViewDesignData}"
        DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}}"/>
</UserControl>
