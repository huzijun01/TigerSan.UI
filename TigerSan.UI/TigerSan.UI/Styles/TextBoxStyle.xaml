<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Styles/Global.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- 无边框文本框样式： -->
    <Style x:Key="NoBorderTextBoxStyle" TargetType="{x:Type TextBox}">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FontSize" Value="{DynamicResource Global.Content.FontSize}" />
        <Setter Property="Foreground" Value="{DynamicResource Colors.RegularText}" />
        <Setter Property="CaretBrush" Value="{DynamicResource Colors.RegularText}" />
    </Style>

    <!-- 自定义文本框模板： -->
    <ControlTemplate x:Key="CustomTextBoxTemplate" TargetType="{x:Type TextBoxBase}">
        <Border
                x:Name="border"
                CornerRadius="2"
                SnapsToDevicePixels="True"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}">
            <ScrollViewer
                    x:Name="PART_ScrollViewer"
                    Focusable="False"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Hidden">
                <ScrollViewer
                        x:Name="PART_ContentHost"
                        Focusable="False"
                        VerticalScrollBarVisibility="Hidden"
                        HorizontalScrollBarVisibility="Hidden"/>
            </ScrollViewer>
        </Border>

        <!-- 触发器： -->
        <ControlTemplate.Triggers>
            <Trigger Property="AcceptsReturn" Value="True">
                <Setter
                        TargetName="PART_ScrollViewer"
                        Property="HorizontalScrollBarVisibility"
                        Value="Auto"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter
                        TargetName="border"
                        Property="Opacity"
                        Value="0.56"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter
                        TargetName="border"
                        Property="BorderBrush"
                        Value="{StaticResource Colors.DarkerBorder}"/>
            </Trigger>
            <Trigger Property="IsKeyboardFocused" Value="True">
                <Setter
                        TargetName="border"
                        Property="BorderBrush"
                        Value="{StaticResource Colors.Brand}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- 自定义文本框样式： -->
    <Style x:Key="CustomTextBoxStyle" TargetType="{x:Type TextBox}">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontFamily" Value="{StaticResource Global.FontFamily}"/>
        <Setter Property="FontSize" Value="{StaticResource Global.Content.FontSize}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Colors.BaseBorder}"/>
        <Setter Property="CaretBrush" Value="{StaticResource Colors.BasicWhite}"/>
        <Setter Property="Foreground" Value="{StaticResource Colors.PrimaryText}"/>
        <Setter Property="Background" Value="{StaticResource Colors.BaseFill}"/>
        <Setter Property="Template" Value="{StaticResource CustomTextBoxTemplate}"/>
    </Style>

    <!-- 默认文本框样式： -->
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource CustomTextBoxStyle}"/>
</ResourceDictionary>