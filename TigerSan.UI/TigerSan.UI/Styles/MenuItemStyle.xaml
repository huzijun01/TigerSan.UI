<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  颜色：  -->
    <SolidColorBrush x:Key="MenuItem.Selected.Background" Color="#ffc787" />
    <SolidColorBrush x:Key="ScrollViewer.Background" Color="#EBEBED" />

    <!--  右键菜单项目：  -->
    <Style x:Key="MenuItemStyle" TargetType="{x:Type MenuItem}">
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FontFamily" Value="{DynamicResource Iconfont}" />
        <Setter Property="FontSize" Value="{DynamicResource MenuItem.FontSize}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type MenuItem}">
                    <Grid
                        MinHeight="24"
                        Width="{TemplateBinding Width}"
                        Background="#FBFBFD">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="32"  />
                            <ColumnDefinition Width="*" MinWidth="80" />
                        </Grid.ColumnDefinitions>

                        <!-- 边框: -->
                        <Border x:Name="_border" Grid.ColumnSpan="2" />

                        <!-- 图标背景: -->
                        <Border x:Name="_iconBackground" Background="#EBEBED" />

                        <!-- 图标: -->
                        <ContentPresenter
                            x:Name="Icon"
                            Width="20"
                            Height="16"
                            Margin="3"
                            ContentSource="Icon"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />

                        <!-- 文本: -->
                        <TextBlock
                            x:Name="_txt"
                            Grid.Column="1"
                            Margin="5,0,15,0"
                            VerticalAlignment="Center"
                            Foreground="#2D2D30"
                            FontFamily="{DynamicResource Global.FontFamily}"
                            Text="{Binding Header, RelativeSource={RelativeSource TemplatedParent}}" />

                        <!-- 箭头: -->
                        <Path
                            x:Name="_path"
                            Grid.Column="1"
                            Margin="5,13,5,0"
                            HorizontalAlignment="Right"
                            Data="M0,4 4,0 0,-4 z"
                            Fill="#7E8A92"
                            Visibility="Collapsed" />

                        <!-- 子菜单弹窗: -->
                        <Popup
                            x:Name="SubMenuPopup"
                            AllowsTransparency="True"
                            Focusable="False"
                            IsOpen="{TemplateBinding IsSubmenuOpen}"
                            Placement="Right">
                            <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <Border
                                    Name="SubmenuBorder"
                                    Background="{StaticResource ScrollViewer.Background}"
                                    BorderBrush="LightGray"
                                    BorderThickness="1"
                                    SnapsToDevicePixels="True">
                                    <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle" />
                                </Border>
                            </ScrollViewer>
                        </Popup>
                    </Grid>

                    <!-- 触发器: -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="HasItems" Value="True">
                            <Setter TargetName="_path" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="_border" Property="Background" Value="{StaticResource MenuItem.Selected.Background}" />
                            <Setter TargetName="_path" Property="Fill" Value="White" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="_txt" Property="Foreground" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  全局右键菜单选项：  -->
    <!--<Style TargetType="{x:Type MenuItem}" BasedOn="{StaticResource MenuItemStyle}"/>-->
</ResourceDictionary>
