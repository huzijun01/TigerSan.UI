<ResourceDictionary xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:controls="clr-namespace:TigerSan.UI.Temp.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/TigerSan.UI;component/Generic.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <!-- 设计数据： -->
    <controls:NumBoxDesignData x:Key="NumBoxDesignData"/>

    <Style x:Key="NumBoxStyle" TargetType="{x:Type controls:NumBox}">
        <Setter Property="MinWidth" Value="100"/>
        <Setter Property="MinHeight" Value="30"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Background" Value="White"/>
    </Style>

    <Style x:Key="NumBoxTextBlockStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style x:Key="NumBoxTextBoxStyle" TargetType="{x:Type TextBox}">
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Template" Value="{StaticResource VerticalAlignmentTextBoxTemplate}"/>
    </Style>

    <Style x:Key="NumBoxButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Width" Value="30"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="White"/>
    </Style>

    <Style TargetType="{x:Type controls:NumBox}" BasedOn="{StaticResource NumBoxStyle}"/>
</ResourceDictionary>