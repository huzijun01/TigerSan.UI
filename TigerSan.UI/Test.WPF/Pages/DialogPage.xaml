<UserControl x:Class="Test.WPF.Pages.DialogPage"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:Test.WPF.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
        <Button
            x:Name="btnInformation"
            Content="信息"
            Command="{Binding btnInformation_ClickCommand}"/>
        <Button
            x:Name="btnSucces"
            Content="成功"
            Command="{Binding btnSucces_ClickCommand}"
            Background="{StaticResource Colors.Success}"/>
        <Button
            x:Name="btnWarning"
            Content="警告"
            Command="{Binding btnWarning_ClickCommand}"
            Background="{StaticResource Colors.Warning}"/>
        <Button
            x:Name="btnError"
            Content="错误"
            Command="{Binding btnError_ClickCommand}"
            Background="{StaticResource Colors.Danger}"/>
        <Button
            x:Name="btnShowDialog"
            Content="对话框"
            Command="{Binding btnShowDialog_ClickCommand}"/>
    </StackPanel>
</UserControl>
