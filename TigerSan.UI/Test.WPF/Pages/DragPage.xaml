<UserControl x:Class="Test.WPF.Pages.DragPage"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:local="clr-namespace:Test.WPF.Pages"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:controls="clr-namespace:TigerSan.UI.Controls;assembly=TigerSan.UI"
             xmlns:converters="clr-namespace:TigerSan.UI.Converters;assembly=TigerSan.UI"
             mc:Ignorable="d" 
             d:DesignWidth="400"
             d:DesignHeight="300">

    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>

    <Grid DataContext="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=DataContext}">
        <Canvas
            Width="{Binding CanvasWidth}"
            Height="{Binding CanvasHeight}"
            Background="{StaticResource Colors.BaseFill}">
            <!-- 按钮： -->
            <Button
                Content="按钮"
                Width="{Binding ButtonWidth}"
                Height="{Binding ButtonHeight}"
                Canvas.Left="{Binding ButtonX}"
                Canvas.Top="{Binding ButtonY}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Loaded">
                        <i:InvokeCommandAction Command="{Binding btn_LoadedCommand}" PassEventArgsToCommand="True"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
        </Canvas>

        <StackPanel Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <!-- 按钮位置： -->
            <TextBlock Text="Button: "/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="X: "/>
                <TextBlock Text="{Binding ButtonX, Converter={StaticResource Double2StringConverter}}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Y: "/>
                <TextBlock Text="{Binding ButtonY, Converter={StaticResource Double2StringConverter}}"/>
            </StackPanel>

            <!-- 移动距离： -->
            <TextBlock Text="Distance: "/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="X: "/>
                <TextBlock Text="{Binding DistanceX, Converter={StaticResource Double2StringConverter}}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Y: "/>
                <TextBlock Text="{Binding DistanceY, Converter={StaticResource Double2StringConverter}}"/>
            </StackPanel>

            <!-- 鼠标位置： -->
            <TextBlock Text="MousePosition: "/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="X: "/>
                <TextBlock Text="{Binding MousePositionX, Converter={StaticResource Double2StringConverter}}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Y: "/>
                <TextBlock Text="{Binding MousePositionY, Converter={StaticResource Double2StringConverter}}"/>
            </StackPanel>

            <!-- 鼠标按下位置： -->
            <TextBlock Text="MouseDownOrUpPosition: "/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="X: "/>
                <TextBlock Text="{Binding MouseDownOrUpPositionX, Converter={StaticResource Double2StringConverter}}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Y: "/>
                <TextBlock Text="{Binding MouseDownOrUpPositionY, Converter={StaticResource Double2StringConverter}}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
