<UserControl x:Class="Test.WPF.Pages.TablePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:TigerSan.UI.Controls;assembly=TigerSan.UI"
             mc:Ignorable="d" 
             d:DesignWidth="500"
             d:DesignHeight="400">

    <UserControl.Resources>
        <Thickness x:Key="MarginTop">0,10,0,0</Thickness>
    </UserControl.Resources>
    
    <Border Margin="15" Style="{StaticResource CardBorderStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnRefresh"
                        Content="Refresh"
                        Command="{Binding btnRefresh_ClickCommand}"
                        Margin="{StaticResource Button.MarginRight}"
                        Background="{StaticResource Colors.Success}"/>
                <Button x:Name="btnAdd"
                        Content="Add"
                        Command="{Binding btnAdd_ClickCommand}"
                        Margin="{StaticResource Button.MarginRight}"/>
                <Button x:Name="btnDelete"
                        Content="Delete"
                        Command="{Binding btnDelete_ClickCommand}"
                        Margin="{StaticResource Button.MarginRight}"
                        Background="{StaticResource Colors.Danger}"/>
            </StackPanel>

            <StackPanel
                Grid.Row="1"
                Orientation="Horizontal"
                Margin="{StaticResource MarginTop}">
                <TextBlock
                    Text="SelectedRowCount:"
                    Style="{StaticResource PropNameTextBlockStyle}"/>
                <TextBlock
                    Margin="5,0,0,0"
                    Text="{Binding SelectedRowCount}"
                    Style="{StaticResource PropValueTextBlockStyle}"/>
            </StackPanel>

            <controls:TableGrid
                x:Name="table"
                Grid.Row="2"
                Margin="{StaticResource MarginTop}"
                TableModel="{Binding EmployeeTable}"/>

            <!--<controls:TableGridStatic
                x:Name="table"
                Grid.Row="1"
                Margin="0,5,0,0"/>-->
        </Grid>
    </Border>
</UserControl>
